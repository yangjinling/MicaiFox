<resources>

    <!-- Base application theme. -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--activityTheme-->
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
       <!-- <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>//设置activity的window为透明窗口
        <item name="android:windowBackground">@null</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--dialogTheme-->
    <style name="Translucent_NoTitles" parent="android:style/Theme.Dialog">   <!--背景颜色及透明程度-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimAmount">0.7</item><!-- 灰度 -->
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
    </style>
    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimAmount">0.4</item><!-- 灰度 -->
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

</resources>
