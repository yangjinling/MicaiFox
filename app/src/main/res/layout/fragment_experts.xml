<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/experts_tv_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experts_tv_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周盈利榜"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experts_tv_mizhong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周命中榜"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/experts_view_all"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white"></View>

        <View
            android:layout_marginLeft="45dp"
            android:id="@+id/experts_view_income"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"></View>


        <View
            android:layout_marginLeft="45dp"
            android:id="@+id/experts_view_mizhong"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"></View>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/experts_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical"></LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/experts_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextAppearance="@style/CustomeTextSize"
        app:tabBackground="@android:color/transparent"
        app:tabTextColor="#ffffff"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/experts_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>