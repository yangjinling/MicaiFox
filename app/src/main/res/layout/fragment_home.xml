<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23253C"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <com.micai.fox.view.PageListScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--banner轮播图-->
            <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
            <!--推荐专家标题-->
            <LinearLayout
                android:id="@+id/home_experts_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/home_experts_moveview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittextstyle"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="9dp"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:text="推荐专家"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--推荐专家列表-->
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"></LinearLayout>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="11dp"
                android:background="@android:color/transparent"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/home_zhongchou_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_zhongchou_moveview"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittextstyle"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="9dp"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:text="众筹"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.micai.fox.view.MyListView
                    android:id="@+id/listview_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="10dp"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"></com.micai.fox.view.MyListView>

            </LinearLayout>
        </LinearLayout>
    </com.micai.fox.view.PageListScrollView>

    <LinearLayout
        android:id="@+id/home_xuanting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF23253C"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

    <LinearLayout
        android:id="@+id/home_xuanting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF23253C"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>
</FrameLayout>