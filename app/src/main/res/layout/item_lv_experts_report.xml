<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12.5dp"
    android:layout_marginRight="12.5dp"
    android:background="@drawable/redbgtstyle">
    <TextView
        android:id="@+id/experts_report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="14dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="13.5dp"
        android:background="#FF23253C"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/experts_report_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="【世界杯】"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experts_report_tv_country1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="西班牙"
            android:textColor="@color/red"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/experts_report_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="center_horizontal"
            android:text="4:3"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experts_report_tv_country2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:text="德国"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experts_report_tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:gravity="right"
            android:text="11月27日"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/experts_report_tv_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/experts_report_tv_changci"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/whitebgtstyle"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>