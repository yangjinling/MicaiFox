<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.micai.fox.activity.ExpertsDetailActivity">

    <include layout="@layout/layout_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebgtstyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/experts_detail_iv_head"
                        android:layout_marginLeft="13dp"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/ic_launcher_round" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/experts_detail_tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专家一"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/experts_detail_tv_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5dp"
                            android:text="专家简介"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/experts_detail_tv_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="命中率"
                            android:textColor="@color/red"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/experts_detail_tv_content"
                    android:maxLines="2"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="13dp"
                    android:text="片放在同一行动态片放在同一行动态使和图片放在同一行使和图片放在同一行"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_marginBottom="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="14dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/experts_detail_tv_yili"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/red"
                            android:text="100"/>
                        <TextView
                            android:textColor="@color/red"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="%"/>
                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="57dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="14sp"
                                android:text="盈利率"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="14sp"
                                android:text="最近开奖"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="23dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/experts_detail_tv_maxyili"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/red"
                            android:text="98"/>
                        <TextView
                            android:textColor="@color/red"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="%"/>
                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="57dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="14sp"
                                android:text="最高盈利率"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="14sp"
                                android:text="共32次众筹"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="众筹"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="报告"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:id="@+id/experts_detail_line_zhongchou"
                    android:layout_marginLeft="50dp"
                    android:layout_width="80dp"
                    android:layout_height="3dp"
                    android:background="@color/white"></View>
               <View
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"></View>
                <View
                    android:id="@+id/experts_detail_line_report"
                    android:layout_width="80dp"
                    android:layout_height="3dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/transparent"></View>
            </LinearLayout>
            <com.micai.fox.view.MyListView
                android:layout_marginTop="10.5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:dividerHeight="10dp"
                android:divider="@android:color/transparent"
                android:layout_weight="1"></com.micai.fox.view.MyListView>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
