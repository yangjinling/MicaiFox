<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.micai.fox.activity.LoginActivity">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_above="@+id/login_ll_et"
        android:layout_width="wrap_content"
        android:layout_marginBottom="65dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_ll_et"
        android:layout_above="@+id/login_btn_login"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/edittextstyle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="手机号："
                android:textColor="@color/black"
                android:textSize="17sp" />
            <EditText
                android:phoneNumber="true"
                android:id="@+id/login_et_phone"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:hint="请输入手机号"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="32dp"
            android:background="#979797"></View>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="密    码："
                android:textColor="@color/black"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/login_et_password"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:hint="请输入密码"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_above="@+id/login_rl_tv"
        android:layout_marginBottom="24dp"
        android:id="@+id/login_btn_login"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20sp"/>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/login_rl_tv"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="102dp"
        android:layout_marginRight="40dp">
        <TextView
            android:id="@+id/login_tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="注册"/>
        <TextView
            android:id="@+id/login_tv_forgetpass"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="忘记密码"/>
    </RelativeLayout>
</RelativeLayout>
