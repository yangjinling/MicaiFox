<resources>

    <!-- Base application theme. -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--activityTheme-->
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
<!--
        <item name="android:windowIsTranslucent">true</item>//设置activity的window为透明窗口
-->
        <item name="android:windowBackground">@android:color/transparent</item>
       <!-- <item name="android:windowBackground">@mipmap/launcher</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--dialogTheme-->
    <style name="Translucent_NoTitles" parent="android:style/Theme.Dialog">   <!--背景颜色及透明程度-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimAmount">0.7</item><!-- 灰度 -->
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
    </style>

    <!-- 自定义对话框样式 -->
    <style name="style_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomeTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimAmount">0.4</item><!-- 灰度 -->
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!--服务类型popwindow-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@animator/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@animator/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
