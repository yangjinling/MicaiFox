<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.micai.fox.activity.RegistTwoActivity">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regist_ll_et_two"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regist_ll_et_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regist_btn_regist"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/edittextstyle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="昵称："
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regist_et_nick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:hint="请输入昵称"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="#979797"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="密码："
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regist_et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:hint="6~16位的数字、字母或符号"
                android:inputType="textPassword|textMultiLine"
                android:maxLength="16"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="17dp"
            android:background="#979797"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="确认密码："
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regist_et_password_agin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请再次输入密码"
                android:textColorHint="@color/gray"
                android:inputType="textPassword|textMultiLine"
                android:maxLength="16"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/regist_btn_regist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/buttonstyle"
        android:text="确认注册"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>
