<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextstyle"
    android:orientation="vertical"
    android:gravity="center">
<LinearLayout
    android:layout_marginTop="13dp"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/notification_iv"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/welldone" />
    <TextView
        android:id="@+id/notification_tv_title"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="满标通知"
        android:textColor="@color/red" />
    <TextView
        android:id="@+id/notification_tv_time"
        android:gravity="right|center_vertical"
        android:layout_width="0dp"
        android:layout_marginRight="11dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="2018.1.15"
        android:textSize="15sp"
        android:textColor="@color/red" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="15sp"
            android:text="你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好"
            android:textColor="@color/red" />


    </LinearLayout>
</LinearLayout>