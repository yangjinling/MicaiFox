<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minHeight="150dp"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="28.5dp"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26.5dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注："
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pilu_tv_touzhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1注 2场 2串1 方案100倍"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pilu_tv_status"
            android:layout_width="73.5dp"
            android:layout_height="23.5dp"
            android:background="@drawable/edittextstyle"
            android:gravity="center"
            android:text="待开奖"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26.5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注金额："
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pilu_tv_touzhu_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥ 2000"
            android:textColor="@color/white"
            android:textSize="15sp" />
<LinearLayout
    android:id="@+id/pilu_ll_yingshou"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="营收："
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pilu_tv_yingshou_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 2000"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pilu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>